  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}


/* Hover для актуальных покупок */
ul li:hover {
  background: #42ff9e;
}

/* Click для актуальныз покупок */
ul li.checked {
  background: #2bb52b;
  color: white;
}

/* Отметить актуальную покупку как выполненную */
ul li.checked::before {
  content: '';
  position: absolute;
  border-color: white;
  border-style: solid;
  border-width: 0 2px 2px 0;
  top: 10px;
  left: 16px;
  transform: rotate(45deg);
  height: 15px;
  width: 7px;
}

/* Удаление покупок */
.close {
  position: absolute;
  right: 0;
  top: 0;
